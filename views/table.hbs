                                <script>
                                    document.addEventListener('DOMContentLoaded', async function () {
                                        try {
                                            const response = await fetch('https://stayapi-production.up.railway.app/api/hotel/rooms/chitietht');
                                            const data = await response.json();
                                            console.log('Received data:', data);
                                            updateTable(data);
                                        } catch (error) {
                                            console.error('Error fetching hotel rooms:', error);
                                        }
                                    });

                                    function updateTable(data) {
                                        const tableBody = document.getElementById('hotelRoomsTableBody');
                                        // Clear existing rows before adding new ones
                                        tableBody.innerHTML = '';

                                        const generateRowId = (hotelId, roomId) => `${hotelId}-${roomId}`;

                                        data.forEach((hotel) => {
                                            hotel.rooms.forEach((room) => {
                                                const rowId = generateRowId(hotel.hotelId, room.roomId);
                                                const row = `<tr id="${rowId}">
                                                        <td>${hotel.hotelName}</td>
                                                        <td>${room.roomType}</td>
                                                        <td>${room.roomStatus}</td>
                                                        <td>${room.roomPrice}</td>
                                                        <td>
                                                            <a href="#" onclick="goDetail('${hotel._id}', '${room._id}')">Sửa</a>

                                                            <button onclick="confirmDelete('${room._id}', '${hotel._id}')">Xóa</button>
                                                        </td>
                                                    </tr>`;
                                                tableBody.insertAdjacentHTML('beforeend', row);
                                            });
                                        });
                                    }

                                    async function confirmDelete(roomId, hotelId) {
                                        const isConfirmed = await Swal.fire({
                                            title: 'Xác nhận xóa?',
                                            text: 'Xóa sẽ mất!',
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonColor: '#3085d6',
                                            cancelButtonColor: '#d33',
                                            confirmButtonText: 'Xóa'
                                        });

                                        if (isConfirmed.isConfirmed) {
                                            try {
                                                const url = `https://stayapi-production.up.railway.app/api/hotel/rooms/${hotelId}/${roomId}`;
                                                const options = { method: 'DELETE' };
                                                const response = await fetch(url, options);

                                                if (response.ok) {
                                                    // Parse the response directly, no need for response.json() here
                                                    const result = await response.text();
                                                    Swal.fire('Xóa thành công!', '', 'success');
                                                    // Reload or update the table after successful deletion
                                                    fetchHotelRooms();
                                                } else {
                                                    console.error('Server returned an error:', response.status, response.statusText);
                                                    Swal.fire('Có lỗi xảy ra!', '', 'error');
                                                }
                                            } catch (error) {
                                                console.error('Error deleting room:', error);
                                                Swal.fire('Có lỗi xảy ra!', '', 'error');
                                            }
                                        }
                                    }

                                    function goDetail(hotelId, roomId) {
                                        console.log('Navigating to form.html with hotelId:', hotelId, 'and roomId:', roomId);
                                        // Use template literals to construct the URL with the hotelId and roomId
                                        window.location.href = `/views/form.html?hotelId=${hotelId}&roomId=${roomId}`;
                                    }

                                    async function fetchHotelRooms() {
                                        try {
                                            const response = await fetch('https://stayapi-production.up.railway.app/api/hotel/rooms/chitietht');
                                            const data = await response.json();
                                            updateTable(data);
                                        } catch (error) {
                                            console.error('Error fetching hotel rooms:', error);
                                        }
                                    }
